<div class="text-center">
  <main class="form-signin">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
      <%= f.label :email, class: "visually-hidden" %>
      <%= f.email_field :email, id: "inputEmail", autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
      <%= f.label :password, class: "visually-hidden" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>

      <div class="checkbox mb-3">
        <%= f.label :remember_me do%>
          <%= f.check_box :remember_me, class: "form-check-input" %>
          Remember me
        <% end %>
      </div>

      <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </main>
</div>
